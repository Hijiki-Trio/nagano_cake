<div class="container">
  <h3 class="mt-5 mb-3">ログイン</h3>
  <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>
    <p class="alert text-danger"><%= alert %></p>
    <table class="my-3 login-customer">
      <tr>
        <td>メールアドレス</td>
        <td>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>パスワード</td>
        <td>
          <div class="field">
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>
        </td>
      </tr>
      <tr>
        <th></th>
        <td>
          <div class="actions">
            <%= f.submit "ログイン", class:"btn btn-info" %>
          </div>
        </td>
      </tr>
    </table>
  <% end %>
</div>