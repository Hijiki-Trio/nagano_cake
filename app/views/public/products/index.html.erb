  <div class="container index-wrapper">
    <h3>商品一覧</h3>
    <div class="products">
      <% @products.each do |product| %>
      <div class="product-index">
        <%= link_to product_path(product) do %>
          <%= attachment_image_tag product, :image, class: 'product-index-image' %>
        <% end %>
        <h4><%= product.name %></h4>
        <h5>¥<%= converting_to_jpy(product.tax_included) %></h5>
      </div>
      <% end %>
      <%= paginate @products %>
    </div>
  </div>