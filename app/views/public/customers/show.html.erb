<p id="notice"></p>
<div class="container mypage-wrapper">
  <h3>マイページ</h3>
    <div class="customer-info">
      <p>
        <strong class="customer-strong col-2">登録情報　　</strong>
        <%= link_to edit_customer_path(@customer.id), class:"text-dark" do %><i class="fas fa-edit fa-lg"></i><% end %>
      </p>
      <div class="row">
        <div class="col-sm-12 col-md-10 col-lg-8">
          <table class="table table-striped customer-info-table">
            <tbody>
            <tr>
              <th>氏名</th>
              <td><%= @customer.last_name %> <%= @customer.first_name %></td>
              </tr>
              <tr>
                <th>カナ</th>
                <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
              </tr>
              <tr>
                <th>郵便番号</th>
                <td><%= @customer.postcode %></td>
              </tr>
              <tr>
                <th>住所</th>
                <td><%= @customer.address %></td>
              </tr>
              <tr>
                <th>電話番号</th>
                <td><%= @customer.phone_number %></td>
              </tr>
              <tr>
                <th>メールアドレス</th>
                <td><%= @customer.email %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row mt-4">
        <strong class="customer-strong col-2">配送先</strong>
        <%= link_to "一覧を見る", shipping_addresses_path, class:"btn btn-secondary customer-info-btn delivery-btn" %>
      </div>
      <div class="row mt-4">
        <strong class="customer-strong col-2">注文履歴</strong>
        <%= link_to "一覧を見る", orders_path, class:"btn btn-secondary customer-info-btn delivery-btn" %>
      </div>
  </div>
</div>