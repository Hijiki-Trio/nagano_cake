<div class="new-container">
  <div class="order-title">
   <h3 class="row ml-5 d-inline">注文情報入力</h3>
  </div>
  
  <%= form_with model: @order do |f| %>
  <h3>支払い情報</h3>
    
    <%= f.radio_button :payment, :"クレジットカード" %>
    <%= f.label :"クレジットカード", class:"form-label-sm col-2" %>
    <%= f.radio_button :payment, :"銀行振込" %>
    <%= f.label :"銀行振込", class:"form-label-sm col-2" %>
    
    <h3>お届け先</h3>
    <div class="mt-3">
      <%= f.radio_button :shipping_address, :"ご自身の住所" %>
      <%= f.label :"ご自身の住所", class:"form-label-sm col-2" %>
      <%=  '〒' + current_customer.postcode + " " + current_customer.address %><br>
      <%= current_customer.last_name + current_customer.first_name %><br>
    </div>
    
    <div class="mt-3">
    <%= f.radio_button :shipping_address, :"登録済住所から選択" %>
    <%= f.label :"登録済住所から選択", class:"form-label-sm col-2" %>  
    <%= f.select %>
    </div>
    
    <div class="mt-3">
       <%= f.radio_button :shipping_addresses, :"新しい届け先" %>
       <%= f.label :"新しい届け先", class:"form-label-sm col-2" %>
      </div>
     <div class="mt-3">
      <div class="row form-group md-2">
        <%= f.label :"郵便番号(ハイフンなし)", class:"form-label-sm col-2" %>
        <%= f.text_field :postcode, placeholder: "0000000" %>
      </div>
      
      <div class="row form-group">
        <%= f.label :"住所", class:"form-label-sm col-2" %>
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", :size => "70" %>
      </div>
      
      <div class="row form-group md-2">
        <%= f.label :"宛名", class:"form-label-sm col-2" %>
        <%= f.text_field :name, placeholder: "令和道子" %>
      </div>  
        <%= f.submit "確認画面へ進む", class:"btn btn-success btn-m offset-3" %>
      
    <% end %>
    
    
  
    
    
   