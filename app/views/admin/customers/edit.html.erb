<p id="notice"></p>
<div class="container">
  <div class="row">
    <h3 class="mt-5"><%= "#{@customer.last_name + @customer.first_name}さんの会員情報編集" %></h3>
  </div>

<%= form_with model: @customer, url: admin_customer_path, local:true do |f| %>
    <table class="my-3 new-customer">
      <tr>
      <td>会員ID</td>
          <td>
            <div class="form mb-3">
              <%= @customer.id %>
            </div>
          </td>
        </tr>
        <tr>
          <td><%= f.label :"氏名", class:"form-label" %></td>
            <td>
              <div class="form mb-3">
                <%= f.text_field :last_name, class:"form-control" %>
              </div>
            </td>
          <td>
              <div class="form mb-3">
                <%= f.text_field :first_name, class:"form-control" %>
              </div>
          </td>
        </tr>
        <tr>
          <td><%= f.label :"フリガナ", class:"form-label" %></td>
            <td>
              <div class="form mb-3">
                <%= f.text_field :last_name_kana, class:"form-control" %>
              </div>
            </td>
          <td>
            <div class="field mb-3">
              <%= f.text_field :first_name_kana, class:"form-control" %>
            </div>
          </td>
        </tr>
        <tr>
          <td><%= f.label :"郵便番号", class:"form-label" %></td>
            <td>
              <div class="field mb-3">
                <%= f.text_field :postcode, class:"form-control" %>
              </div>
          </td>
        </tr>
        <tr>
          <td><%= f.label :"住所", class:"form-label" %></td>
            <td>
              <div class="form mb-3 ">
                <%= f.text_field :address, class:"form-control" %>
              </div>
            </td>
        </tr>
        <tr>
          <td><%= f.label :"電話番号", class:"form-label" %></td>
           <td>
            <div class="form mb-3">
              <%= f.text_field :phone_number, class:"form-control" %>
            </div>
          </td>
        </tr>
        <tr>
          <td><%= f.label :"メールアドレス", class:"form-label" %></td>
            <td>
              <div class="form mb-3">
                <%= f.text_field :email, class:"form-control" %>
              </div>
            </td>
        </tr>
        <tr>
          <td><%= f.label :"会員ステータス", class: "control-label" %></td>
            <td>
              <%= f.radio_button :is_valid, true %>
              <%= f.label :is_valid, "有効", class: "mr-3"%>
              <%= f.radio_button :is_valid, false %>
              <%= f.label :is_valid, "退会" %>
            </td>
        </tr>
        <tr>
          <td></td>
          <td>
            <div class="form-group mt-5 mb-3">
              <%= f.submit "変更を保存", class: "btn btn-success" %>
            </div>
            <% end %>
          </td>
        </tr>
  </table>
</div>