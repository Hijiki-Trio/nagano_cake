<main class="bacimage">
  <div class="container">
    <div class="title-box">
      <h4 class="title-text">ジャンル編集</h4>
    </div>
    <%= render 'customers/shared/error_messages', resource: @genre %>
    <div class="niw-item">
      <%= form_with model: [:admin, @genre], local:true do |f| %>
      <div class="d-flex">
        <%= f.text_field :name, placeholder: "ジャンル名", size: "30", class: "form-control mr-3" %>
        <%= f.submit '　変更を保存　', class: "btn btn-sm btn-secondary" %>
      </div>
      <% end %>
    </div>
  </div>
</main>