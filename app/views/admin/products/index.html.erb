<main class="bacimage">
  <h4 class="title-text">商品一覧</h4>
  <div><%= link_to new_admin_product_path do %><i class="far fa-plus-square fa-3x text-dark"></i><% end %></div>
  <div class="btnripple">
  <div class="date">
    <table class="table table-striped shadow p-3 mb-5 bg-white rounded">
      <thead>
        <th>
          <td>商品ID</td>
          <td>商品名</td>
          <td>税抜価格</td>
          <td>ジャンル</td>
          <td>ステータス</td>
        </th>
      </thead>
      <tbody>
        <% @products.each do |product| %>
        <tr>
          <th>
            <td><%= product.id %></td>
            <td><%= link_to product.name, admin_product_path(product.id) %></td>
            <td><%= converting_to_jpy(product.price) %></td>
            <td><%= product.genre.name %></td>
            <td><% if product.is_active == true %>
            <span class="text-success">販売中</span>
              <% else %>
            <span class="text-secondary">販売停止</span>
            <% end %></td>
          </th>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</main>