<body>
    <main class="bacimage">
      <h1>新規投稿</h1>
        <div class="niw-item">
            <thead>
            <%= form_with model: @product, url:'/products', local:true do |f| %>
            <h4>商品画像</h4>

            <th>
                <td>
                  <h4>商品名</h4>
                </td>
                <td>
                  <div><%= f.text_field :name %></div>
                </td>
            </th>


              <h4>商品説明</h4>
              <%= f.text_area :detail %>
              <h4>税抜価格</h4>
             <%= f.text_field :price %>
              <%= f.submit '投稿' %>
            <% end %>
            </thead>

        </div>
    </main>
</body>
