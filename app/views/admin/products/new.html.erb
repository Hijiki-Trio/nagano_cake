<body>
    <main class="bacimage">
      <h1>新規投稿</h1>
        <div class="niw-item">
            <thead>
            <%= form_with model: [:admin, @product], local:true do |f| %>
            <h4>商品画像</h4>
                <%= f.attachment_field :image %>
                  <h4>商品名</h4>
                  <div><%= f.text_field :name, placeholder: "商品名", size: "30", class: "form-control" %></div>
              <h4>商品説明</h4>
              <%= f.text_area :detail, placeholder: "ここに説明文を記述します", size: "30x5", class: "form-control" %>
              <h4>税抜価格</h4>
             <%= f.text_field :price, placeholder: "1,000", size: "30", class: "form-control" %> 円
              <div><%= f.submit '投稿' %></div>
            <% end %>
            </thead>

        </div>
    </main>
</body>
