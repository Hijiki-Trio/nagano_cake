<div class="bacimage">
  <div class="title-box">
    <h4 class="title-text">商品詳細</h4>
  </div>
  <div class="item-show">
      <div class="item-show-image">
        <%= attachment_image_tag @product, :image, format: 'jpeg', size: "700x500" %>
      </div>
      <div>
        <table class="itemu-show-box" frame="border">
          <tr>
            <td>・商品名</td>
            <td><%= @product.name %></td>
          </tr>
          <tr>
            <td>・商品説明</td>
            <td class="detail"><%= @product.detail %></td>
          </tr>
          <tr>
            <td>・ジャンル</td>
            <td><%= @product.genre.name %></td>
          </tr>
          <tr>
            <td>・税込価格(税抜価格)</td>
            <td><%= converting_to_jpy(@product.tax_included) %>(<%= converting_to_jpy(@product.price) %>)円</td>
          </tr>
          <tr>
            <td>
              <% if @product.is_active == true %>
              ・販売中
              <% else %>
              ・販売停止
              <% end %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= link_to edit_admin_product_path(@product.id) do %><i class="fas fa-edit fa-3x text-dark"></i><% end %></td>
          </tr>
        </table>
      </div>
  </div>
</div>
