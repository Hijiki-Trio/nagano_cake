<body>
  <main class="bacimage">
    <h4 class="title-text">商品詳細</h4>

        <div class="row col-md-4">
          <div class="col"><%= attachment_image_tag @product, :image, format: 'jpeg', size: "200x100" %></div>
        </div>
        <div class="row my-2">
          <div class="col">商品名</div>
          <div class="col"><%= @product.name %></div>
        </div>
        <div class="row my-2">
          <div class="col">商品説明</div>
          <div class="col"><%= @product.detail %></div>
        </div>
        <div class="row my-2">
          <div class="col">ジャンル</div>
           <div class="col"><%= @product.genre.name %></div>
        </div>
        <div class="row my-2">
          (<%= converting_to_jpy(@product.tax_included) %>)<%= converting_to_jpy(@product.price) %>円
        <div class="row my-2">
          <% if @product.is_active == true %>
        <div class="col">販売中</div>
          <% else %>
        <div class="col">販売停止</div>
          <% end %>
        </div>
        <div class="row my-2">
         <div class="col"><%= link_to "編集", edit_admin_product_path(@product.id), class:"btn btn-success" %></div>
        </div> 
  </main>
</body>