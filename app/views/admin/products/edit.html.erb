<body>
  <main class="bacimage">
    <h4 class="title-text">商品編集</h4>
      <%= form_with model: [:admin, @product], local:true do |f| %>
      <h4>商品画像</h4>
          <%= f.attachment_field :image %>
      <h4>商品名</h4>
  　　<%= f.text_field :name, placeholder: "商品名", size: "30", class: "form-control" %>
      <h4>商品説明</h4>
      <%= f.text_area :detail, placeholder: "ここに説明文を記述します", size: "30x5", class: "form-control" %>
      <h4>ジャンル</h4>
      <%= f.fields_for :genre do |g| %>
      <%= g.collection_select :genre_id, @genres, :id, :name %>
      <% end %>
      <h4>税抜価格</h4>
      <%= f.text_field :price, placeholder: "1,000", size: "30", class: "form-control" %> 円
      <h4><%= f.label :"販売ステータス", class: "control-label" %></h4>
          <%= f.radio_button :is_active, true %>
          <%= f.label :is_active, "販売中"%>
          <%= f.radio_button :is_active, false %>
          <%= f.label :is_active, "販売停止中" %>
        <div><%= f.submit '変更を保存' %></div>
      <% end %>
  </main>
</body>