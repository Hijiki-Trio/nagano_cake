<%= render 'customers/shared/error_messages', resource: @customer %>
<div class="container">
  <h3 class="mt-5">新規会員登録</h3>

　<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>
    <table class="my-3 new-customer">
      <tr>
        <td>名前</td>
        <td>
          <div class="field">
            <%= f.text_field :last_name, autofocus: true, autocomplete: "family-name", placeholder: "令和" %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.text_field :first_name, autofocus: true, autocomplete: "given-name", placeholder: "道子" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>フリガナ</td>
        <td>
          <div class="field">
            <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
          </div>
        </td>
        <td>
          <div class="field">
            <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>メールアドレス</td>
        <td>
          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>郵便番号（ハイフンなし）</t>
        <td>
          <div class="field">
            <%= f.text_field :postcode, autofocus: true, autocomplete: "postal-code", placeholder: "0000000" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>住所</td>
        <td>
          <div class="field">
            <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神国町0-0" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>電話番号（ハイフンなし）</td>
        <td>
          <div class="field">
            <%= f.text_field :phone_number, autofocus: true, autocomplete: "tel", placeholder: "00000000000" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>パスワード（６文字以上）</td>
        <td>
          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
        </td>
      </tr>
      <tr>
        <td>パスワード（確認用）</td>
        <td>
          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
        </td>
      </tr>
      <tr>
        <th></th>
        <td>
          <div class="actions">
            <%= f.submit "新規登録", class:"btn btn-info" %>
          </div>
        </td>
      </tr>
    </table>
  <% end %>

  <div class="mb-5">
    <h4 class="mt-5 mb-3">既に登録済みの方</h4>
    <%= link_to "こちら", new_customer_session_path %>からログインしてください。
  </div>

</div>